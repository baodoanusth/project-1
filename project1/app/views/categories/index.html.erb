<div id="panel" style="width: 100%; height: 150%; border-radius: 10px; border: 1px solid gray; padding-bottom: 20px">

<p id="notice"><%= notice %></p>
<div id="title" style="border-top-left-radius: 10px; border-top-right-radius: 10px; background-color: gray; height: 200%; margin-top: -20px; box-align: center; padding: 2px">
  <h2 style="text-align: center;"> Listing Categories </h2>
</div>
    <% @categories.each do |category| %>
      <div style="width: 500px; height: 200px; margin: 20px;" >      
        <h2><%= category.title %></h2>
        <p> Here is some word - Bao is creating it </p>
        <%= link_to 'Show', category %>
        <%= link_to 'Edit', edit_category_path(category) %>
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %>      
      </div>
    <% end %>

<br>

<%= link_to 'New Category', new_category_path %>
</div>